#:kivy 1.0

<Node>:
    nodetextlabel:nodetextlabel
    size_hint:None,None
    #size:100,15
    canvas.before:
        Color:
            rgb: .5, .5, .5
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id:nodetextlabel
        #text:"lab"
        pos:root.pos
        size:root.size

<MainView>:
    mml:mml
    scrolla:scrolla
    #orientation:'vertical'
    Label:
        id:mml
        text:"hallo"
    ScrollView:
        RelativeLayout
            id:scrolla
            size:[900,2000]

